{
  "name": "mybit-website",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:MyBitFoundation/MyBit.io.git",
  "author": "Jose Aguinaga <jj@mybit.io>",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "eslint-config-prettier": "^2.6.0",
    "husky": "^0.14.3",
    "lint-staged": "^4.3.0",
    "next": "^4.1.3",
    "prettier": "^1.7.4",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "xo": "^0.18.2"
  },
  "xo": {
    "envs": [
      "node",
      "browser"
    ],
    "extends": "prettier",
    "rules": {
      "capitalized-comments": 0
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint",
      "prettier --single-quote --no-semi --write",
      "git add"
    ]
  },
  "scripts": {
    "precommit": "xo --quiet && lint-staged",
    "lint": "xo",
    "format": "prettier --single-quote --no-semi --write *.js {src,test}/*.js",
    "dev": "next -p $PORT",
    "build": "next build",
    "start": "next start"
  }
}
