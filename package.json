{
  "name": "mybit-website",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:MyBitFoundation/MyBit.io.git",
  "author": "Jose Aguinaga <jj@mybit.io>",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "autoprefixer": "^7.1.6",
    "babel-plugin-inline-react-svg": "^0.4.0",
    "babel-plugin-module-resolver": "^2.7.1",
    "babel-plugin-transform-assets-import-to-string": "^1.0.1",
    "babel-plugin-wrap-in-js": "^1.1.1",
    "eslint-config-prettier": "^2.6.0",
    "eslint-config-xo-react": "^0.13.0",
    "eslint-plugin-react": "^7.4.0",
    "file-loader": "^1.1.5",
    "flexboxgrid-sass": "^8.0.5",
    "glob": "^7.1.2",
    "husky": "^0.14.3",
    "include-media": "^1.4.9",
    "lint-staged": "^4.3.0",
    "next": "^4.1.3",
    "node-sass": "^4.5.3",
    "normalize.css": "^7.0.0",
    "postcss-easy-import": "^3.0.0",
    "postcss-loader": "^2.0.8",
    "prettier": "^1.7.4",
    "raw-loader": "^0.5.1",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-ga": "^2.3.5",
    "react-mailchimp-subscribe": "^1.0.2",
    "react-scroll-to-component": "^1.0.1",
    "sass-loader": "^6.0.6",
    "url-loader": "^0.6.2",
    "xo": "^0.18.2"
  },
  "xo": {
    "envs": [
      "node",
      "browser"
    ],
    "extends": [
      "prettier",
      "xo-react"
    ],
    "rules": {
      "capitalized-comments": 0,
      "import/no-extraneous-dependencies": 0,
      "import/no-unresolved": 0,
      "react/no-danger": 0,
      "import/prefer-default-export": 0,
      "react/jsx-indent-props": [
        2,
        2
      ],
      "react/jsx-indent": [
        2,
        2
      ],
      "react/jsx-tag-spacing": 0,
      "react/jsx-no-bind": 0
    }
  },
  "lint-staged": {
    "{componentes,pages}/**/*.js": [
      "prettier --single-quote --no-semi --write",
      "git add"
    ]
  },
  "scripts": {
    "precommit": "xo --quiet && lint-staged",
    "lint": "xo",
    "format": "prettier --single-quote --no-semi --write *.js pages/*.js",
    "dev": "next -p $PORT",
    "build": "next build && next export"
  }
}
